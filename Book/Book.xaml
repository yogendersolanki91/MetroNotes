<UserControl x:Class="Book.Book"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:note="clr-namespace:Note;assembly=Note"
             mc:Ignorable="d" 
             Background="Transparent" HorizontalAlignment="Stretch" BorderThickness="0" BorderBrush="AliceBlue"  VerticalAlignment="Stretch">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="119*"/>
        </Grid.RowDefinitions>
        <TextBlock Name="BookTitle" Foreground="White" Text="New Book" FontSize="26" Margin="28,0,0,0" FontFamily="Segoe UI Light"></TextBlock>
        <StackPanel Name="ChapterStack" Margin="0,10,0,0" Orientation="Vertical"  HorizontalAlignment="Stretch" Grid.Row="1">
      
        
            
        </StackPanel>
    </Grid>
</UserControl>
